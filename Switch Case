#include <stdio.h>

int main()
{
    int number;
    printf("Choose a number(1,2,3,4,5)=");
    scanf("%d",&number);
    
    switch(number)
    {
        case 1:
        printf("Food item-Pizza\n");
        printf("Price-239");
        break;
        
        case 2:
        printf("Food item-Burger\n");
        printf("Price-129");
        break;
        
        case 3:
        printf("Food item-Pasta\n");
        printf("Price-179");
        break;
        
        case 4:
        printf("Food item-French fries\n");
        printf("Price-99");
        break;
        
        case 5:
        printf("Food item-Sandwich\n");
        printf("Price-149");
        break;
        
        default:
        printf("Choose a number from the list");
    }

    return 0;
}
