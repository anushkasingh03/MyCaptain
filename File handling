#include<stdio.h>
int main()
{
      FILE *fp1;
      FILE *fp2;
      char ch;
      int i,pos;
      fp1=fopen("abc.txt","r");
      if(fp1==NULL)
      {
            printf("File does not exist..");
      }
      fseek(fp1,0,SEEK_END);
      pos=ftell(fp1);
      
       i=0;
       while(i<pos)
       {
            i++;
            fseek(fp1,-i,SEEK_END);
            
            ch=fgetc(fp1);
            printf("%c",ch);
      }
      if (fp1 = fopen("abc.txt", "r"))
   {
      ch = getc(fp1);
      fp2 = fopen("xyz.txt", "w+");
      while (ch != EOF)
      {
         fputc(ch, fp2);
         ch = getc(fp1);
      }
      fclose(fp1);
      fclose(fp2);
   }
      return 0;
}
